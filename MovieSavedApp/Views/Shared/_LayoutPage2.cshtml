@{
    ViewBag.Title = "Home";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/font-awesome.min.css")
    @Styles.Render("~/Content/ionicons.min.css")
    @Styles.Render("~/Content/datepicker3.css")
    @Styles.Render("~/Content/daterangepicker-bs3.css")
    @Styles.Render("~/Content/bootstrap3-wysihtml5.min.css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/site")


    <link href='http://fonts.googleapis.com/css?family=Paytone+One' rel='stylesheet' type='text/css'>
</head>

<body>
    <!-- Logo -->
    <header>
        <section class="BarraEncabezado">
            <span id="TituloPagina">
                MOVIESAVED
            </span>
            <div class="nombre-usuario ">
                <i class="glyphicon glyphicon-user"> </i>
                <span id="texto-usuario">Usuario:  @Session["LogedUsername"].ToString()</span>
            </div>
        </section>
        <section class="BarraMenu bg-blue-gradient ">
            <ul class="ul-MenuDerecho">
                <li class="active">
                    <a href="@Url.Action("Salir", "Inicio")">
                        <span>Salir&nbsp;|&nbsp;</span>
                    </a>
                </li>
                <li class="active">
                    <a href="@Url.Action("Index", "Home")">
                        <span>Acerca de nosotros&nbsp;|&nbsp;</span>
                    </a>
                </li>
                <li class="active">
                    <a href="@Url.Action("Index", "Home")">
                        <span>Contacto&nbsp;|&nbsp;</span>
                    </a>
                </li>
                <li class="active">
                    <a href="@Url.Action("Index", "Home")">
                        <span>Ayuda&nbsp;|&nbsp;</span>
                    </a>
                </li>
            </ul>
            <ul class="ul-MenuIzquierdo">
                <li class="active">
                    <a href="@Url.Action("Index", "Home")">
                        <span>&nbsp;&nbsp;Home</span>
                    </a>
                </li>
                <li class="active">
                    <a href="@Url.Action("Index", "Home")">
                        <span>&nbsp;|&nbsp;Buscar película en IMDB</span>
                    </a>
                </li>
            </ul>
        </section>
    </header>
    <section class="wrapper row-offcanvas row-offcanvas-left" style="min-height:1200px;">
        <aside class="lado-izquierdo">
            @RenderBody()
        </aside>
        <aside class="lado-derecho sidebar-offcanvas ">
            <section class="panel-filtros">
                <div class="content-header bg-blue-gradient">Filtros flexibles</div>
                <form action="index.html" method="post" class="filtros-body">
                    <div>
                        <div class="form-group">
                            <label>Pais</label>
                            <div class="input-group">
                                <input type="text" name="Pais" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Genero</label>
                            <div class="input-group">
                                <input type="text" name="Pais" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Director</label>
                            <div class="input-group">
                                <input type="text" name="Pais" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Actor</label>
                            <div class="input-group">
                                <input type="text" name="Pais" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-xs-6 ">
                                <label>Año</label>
                                <div class="input-group">
                                    <input type="text" name="Nombre" class="form-control" style="margin-right:2.5px" />
                                </div>
                            </div>
                            <div class="form-group col-xs-6">
                                <label>Calificación</label>
                                <div class="input-group">
                                    <input type="text" name="Nombre" class="form-control" style="margin-left:2.5px" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <button type="submit" class="btn bg-blue btn-block">Filtrar</button>
                            </div>
                        </div>
                    </div>
                </form>
            </section>  
            <section class="panel-generos">
                @{Html.RenderAction("GeneroMenu", "Home");}
            </section>
         </aside>
    </section>

    @Scripts.Render("~/bundles/daterangepicker.js")
    @Scripts.Render("~/bundles/bootstrap-datepicker.js")
    @Scripts.Render("~/bundles/bootstrap3-wysihtml5.all.min.js")
    @Scripts.Render("~/bundles/icheck.min.js")
    @Scripts.Render("~/bundles/app.js")
    @Scripts.Render("~/bundles/dashboard.js")
    @Scripts.Render("~/bundles/demo.js")
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Hernando Delgado - Juan Acosta</p>
    </footer>
</body>

</html>

